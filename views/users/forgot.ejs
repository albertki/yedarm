<body id="loginPage" class="d-flex flex-column">

    <nav class="navbar navbar-expand-md navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Yedarm</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/students">Students</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/students/new">New Student</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Volunteer</a>
                    </li>
                </ul>
                <div class="navbar-nav ml-auto">
                    <% if (!currentUser) { %> 
                        <a class="nav-link active" href="/login">Login â€¢ Register</a>
                        <!-- <a class="nav-link" href="/register">Register</a> -->
                    <% } else { %> 
                        <a class="nav-link" href="/logout">Log Out</a>
                    <% } %> 
                </div>
            </div>
        </div>
    </nav>

    <main class="container mt-5">
        <%- include('../partials/flash') %> 
        <div class="login-page container d-flex justify-content-center align-items-center mt-5">
            <div class="row">
                <div class="col-md-6 col-xl-4" style="width: 30rem;">
                    <div class="card shadow px-3 py-3">
                        <div class="card-body">
                            
                            <div class="container-fluid">
                                <h2 class="card-title mb-4">Forgot your password?</h2>
                                <div class="row">
                                    <div class="col">
                                        <form action="/forgot" id="forgotPassword" method="POST" class="needs-validation signin" novalidate>
                                            <div class="mb-3">
                                                <label for="username" class="form-label">Username</label>
                                                <input id="username" class="form-control" name="username" type="text" autofocus required>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">
                                                    Please enter a username.
                                                </div>
                                            </div>
                    
                                            <div class="mb-3">
                                                <label for="email" class="form-label">Email</label>
                                                <input type="email" id="email" class="form-control" name="email" required>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">
                                                    Please enter an email.
                                                </div>
                                            </div>
                                            <!-- <div class="row"> -->
                                                <input type="button" class="btn btn-secondary"  onclick="location.href='./login'" value="Cancel"/>
                                                <button type="submit" class="btn btn-success" style="background-color: #28a745; border-color: #28a745;">Reset password</button>
                                                <!-- <button type="submit" class="btn btn-success" style="background-color: #28a745; border-color: #28a745;" onsubmit="document.getElementById('forgotPassword').submit();">
                                                    Reset password
                                                </button> -->

                                            <!-- </div> -->
                                        </form>
                    
                                    </div>
                                </div>
                            </div>

                            <!-- <div class="modal-footer"> -->
                                <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                    Cancel
                                </button>
                                <button type="submit" class="btn btn-success" style="background-color: #28a745; border-color: #28a745;" onsubmit="document.getElementById('forgotPassword').submit();">
                                    Reset password
                                </button> -->
                            <!-- </div> -->
                            <!-- </form> -->


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="footer mt-auto py-3">
        <div class="container">
            <span class="text-dark">&copy Albert K 2020.</span>
        </div>
    </footer>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-popRpmFF9JQgExhfw5tZT4I9/CI5e2QcuUZPOVXb1m7qUmeR2b50u+YFEYe1wgzy" crossorigin="anonymous"></script>
    <script src="/scripts/validateForms.js"></script>
    
</body>
</html>


